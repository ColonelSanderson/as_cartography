<%= render(:layout => '/shared/sidebar',
           :locals => {
               :record_type => 'transfer',
               :record => @transfer,
           }) do |sidebar| %>
    <%= sidebar.render_for_view_and_edit(:subrecord_type => 'transfer_checklist', :property => :none) %>
    <% if @transfer['files'] && !@transfer['files'].empty? %>
        <%= sidebar.render_for_view_and_edit(:subrecord_type => 'files', :property => 'files') %>
    <% end %>
    <%= sidebar.render_for_view_only(:subrecord_type => 'conversation', :property => :none) %>
<% end %>
