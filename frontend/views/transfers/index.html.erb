<%= setup_context(:title => I18n.t("transfer._plural")) %>

<%
  @no_title = true

  add_column(I18n.t("transfer.id"),
             proc {|record|
               "<span class=\"map-browse-content map-browse-id\">#{record['map_id_u_ssort']}</span>".html_safe
             }, :sortable => true, :sort_by => 'map_id_u_sort')

  add_column(I18n.t("transfer.agency_id"),
             proc {|record|
                   out = "<span class=\"map-browse-content map-browse-id\">"
                   out += 'A' + record['map_agency_id_u_ssort']
                   out += "</span>"

                   out.html_safe

             }, :sortable => true, :sort_by => 'map_agency_id_u_sort')

  add_column(I18n.t("transfer.agency_details"),
             proc {|record|
                   parsed = ASUtils.json_parse(record['json'])
                   agency = parsed.fetch('agency', {}).fetch('_resolved', {})
                   out = agency.fetch('display_name', {}).fetch('sort_name', '')
                   out += '<ul><li> Location: ' + parsed["agency_location_display_string"] + '</li>'
                   out += '<li> Contact: ' + record["created_by"] + '</li></ul>'

                   out.html_safe

             }, :sortable => true, :sort_by => 'map_agency_name_u_ssort')


  add_column(I18n.t("transfer.status"),
             proc {|record|
               parsed = ASUtils.json_parse(record['json'])

               out = "<span class=\"map-browse-content\">#{status_label(record['transfer_status_u_ssort'])}</span>"

               out.html_safe
             }, :sortable => true, :sort_by => 'transfer_status_u_ssort')


%>

<div class="row">
  <div class="col-md-3">
    <div class="sidebar">
      <%= render_aspace_partial :partial => "search/filter" %>
    </div>
  </div>
  <div class="col-md-9">
    <% if user_can?('update_transfer_record') %>
      <div class="record-toolbar">
        <div class="btn-group pull-right">
          <%= link_to I18n.t("actions.export_csv"), request.parameters.merge({ :format => :csv}), id: "searchExport",  class:  "btn btn-sm btn-info" %>
          <%= link_to I18n.t("transfer._frontend.action.create"), {:controller => :transfers, :action => :new}, :class => "btn btn-sm btn-default" %>
        </div>
        <br style="clear:both" />
      </div>
    <% end %>

    <div class="record-pane">
      <%= link_to_help :topic => "search" %>

      <h2><%= I18n.t("transfer._plural") %></h2>

      <%= render_aspace_partial :partial => "shared/flash_messages" %>

      <%= render_aspace_partial :partial => "search/listing" %>
    </div>
  </div>
</div>
